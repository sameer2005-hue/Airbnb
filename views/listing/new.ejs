<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br />
    <h3>Create a New Listing</h3>
    <form action="/listings" method="post" enctype="multipart/form-data">
      <!-- this enctype used to send file data i.e to upload image or pdf file to our route  -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          class="form-control"
          type="text"
          name="listing[title]"
          placeholder="Title"
          required
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          required
          class="form-control"
          name="listing[description]"
        ></textarea>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          class="form-control"
          type="file"
          name="listing[image]"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            class="form-control"
            name="listing[price]"
            placeholder="Price"
            required
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            class="form-control"
            type="text"
            name="listing[country]"
            placeholder="Country"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          class="form-control"
          type="text"
          name="listing[location]"
          placeholder="Location"
          required
        />
      </div>
      <button class="mt-3 add-btn btn btn-dark" type="submit">Add</button>
      <a href="/listings" class="mt-3 btn cancel btn-dark">Cancel</a>
    </form>
  </div>
</div>
